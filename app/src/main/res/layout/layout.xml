<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/all_match_parent">



    <ImageView
        android:id="@+id/image_view_album_cover"
        android:layout_width="@dimen/eighty_dp"
        android:layout_height="@dimen/eighty_dp"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/seize_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_song_name"
            android:textStyle="bold"
            style="@style/all_wrap_content"/>

        <TextView
            android:id="@+id/text_view_artist_name"
            style="@style/all_wrap_content"/>

    </LinearLayout>

</LinearLayout>





