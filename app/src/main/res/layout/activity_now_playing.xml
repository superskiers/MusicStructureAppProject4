<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/all_match_parent"
    android:contentDescription="@string/now_playing_activity"
    tools:context="com.example.android.musicstructureappproject4.NowPlayingActivity">

    <ImageView
        android:id="@+id/image_view_album_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_hun_dp"
        android:layout_marginTop="@dimen/twenty4_dp" />

    <TextView
        android:id="@+id/text_view_song_name"
        style="@style/now_playing_text_view"
        android:layout_marginTop="@dimen/seize_dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_artist_name"
        style="@style/now_playing_text_view"
        android:layout_marginTop="@dimen/forty2_dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_artist_name"
        android:layout_marginTop="@dimen/seize_dp" />

    <TextView
        android:id="@+id/sample_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/sample_text_view"
        android:layout_marginBottom="@dimen/seize_dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_pause"
            style="@style/buttons_now_playing_activity"
            android:layout_marginLeft="@dimen/cent24_dp"
            android:background="@drawable/ic_pause" />

        <Button
            android:id="@+id/button_play"
            style="@style/buttons_now_playing_activity"
            android:layout_marginLeft="@dimen/sixty4_dp"
            android:background="@drawable/ic_play_arrow" />

    </LinearLayout>

</RelativeLayout>


