<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryDark">@color/darkGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- NowPlaying XML TextViews-->
    <style name="now_playing_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/twenty4_dp</item>
        <item name="android:layout_below">@id/image_view_album_cover</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <!-- Anything that requires height and width to be wrap_content-->
    <style name="all_wrap_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Anything that requires height and width to be match_parent-->
    <style name="all_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Buttons in NowPlaying Activity-->
    <style name="buttons_now_playing_activity">
        <item name="android:layout_height">@dimen/forty8_dp</item>
        <item name="android:layout_width">@dimen/forty8_dp</item>
    </style>

</resources>
